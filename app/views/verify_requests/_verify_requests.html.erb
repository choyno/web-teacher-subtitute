<tr>
	<th>
		<% if verify_request.request_at_from <=  Date.current.yesterday and
			verify_request.request_at_to <=  Date.current.yesterday %>
			<%= verify_request.request_at_from.strftime('%m-%d-%Y') %>
		<% elsif %>
				<%= verify_request.request_full_date %>
		<% end %>
	</th>
	<th><%= verify_request.teacher.fullname %></th>
	<th><%= verify_request.reason.name %></th>
	<th><% if verify_request.planned == false%>
		Unplan
		<% elsif%>
		Plan
		<% end %>
	</th>
	<th>
		<%= link_to 'Show', verify_request_path(verify_request), method: :get , 
												:class => "btn btn-primary btn-blue" %>
	 
	</th>
</tr>	