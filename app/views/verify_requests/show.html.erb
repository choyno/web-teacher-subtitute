<div id="content">			 
	<div id="contentHeader">
		<h1>Substitute Information</h1>
	</div> <!-- #contentHeader -->	
	<div class="container">

		<div class="grid-24">	
			<div class="well">
				<h1><%= @verify_request.teacher.fullname %></h1>
				<h1><%= @verify_request.request_full_date %></h1>
			</div>
			<%= form_for @verify_request, url: verify_request_path(@verify_request), :method => :put do |f| %>
				<table class="table table-bordered table-striped data-table">
						<thead>
							<tr>
								<th>Substitute Teacher</th>
								<th>Date Requested</th>
								<th>Subject Code</th>
								<th>Room #</th>
								<th>Section</th>
								<th>Type</th>
								<th>Start Time</th>
								<th>End Time</th>
								<th>Schedule</th>
								<!-- <th>Options</th> -->
							</tr>
						</thead>
				        <tbody>
						
							<%= render partial: 'show_verify_request', collection: @show_verify_request, as: :verify_request %>
							
				        </tbody>
				</table>
				
				
				<br /><br /><br />
				<div class="form-actions" id="final-confirmation-btn">
					<%= link_to verify_requests_path do %>
							<button class="btn btn-primary btn-blue">Back
							</button>
						<% end %>
					<div class="pull-right">
						<%= f.submit 'Vouch', class: 'btn btn-primary btn-blue', 
											data: { confirm: 'Are you sure you want to Vouch this Request?' } %>
												&nbsp;&nbsp;&nbsp;
						
						<%= f.submit 'Confirm', class: 'btn btn-primary btn-blue', 
											data: { confirm: 'Are you sure you want to Approved?' } %>
											&nbsp;&nbsp;&nbsp;
						
					</div>
				</div>
				
			<% end %>
		</div>
	</div> <!-- .grid -->			
</div>
			
			
