<div id="content">			
	<div id="contentHeader">
		<h1>Generate Reports</h1>
	</div> <!-- #contentHeader -->	
	<div class="container">
		<div class="grid-24">
			<% if notice %>
				<div class="notify notify-error">
					<a class="close" href="javascript:;">Ã—</a>
					<%= notice %>
				</div>
			<% end %>

			<div class="widget widget-table">
				<div class="widget-header">
				<h3 class="icon chart">Choose Cut time Period</h3>
				</div>
			</div>
			<%= form_for generate_reports_path, method: :get do %>
						<div class="search">
							<div class="field">
								<label for="status">Generate For:</label>
								<%= select_tag :generate_by, options_for_select(["Absent Teachers"," Substitute Teachers"])%>
							</div>

							<div class="field">
								<label for="status"> Started Date:</label>
								<%= text_field_tag :start_date %>
							</div>

							<div class="field">
									<label for="status"> End Date:</label>
									<%= text_field_tag :end_date %>
							</div>
							<%= submit_tag "Generate", :name => nil, :class => "btn btn-primary btn-blue" %>
								<br style="clear:both"/>
						</div>
					<% end %>

			<div class="widget-content">

				
				<table  id="my-table" class="table table-bordered table-striped data-table">
					<thead>
						<tr>
							<th>Absent Teacher</th>
							<th>Date</th>
							<th>Class Period</th>
							<th>Rendered Hours</th> 
							<th>Total Hours</th> 
						</tr>
					</thead>
			   		 <tbody>
			   		 	<%= render partial: 'absent_generate_reports', collection: @generate_reports, as: :generate_report %>
			    	</tbody>
			    </table>
			  </div>	 
					

			</div> <!-- .widget-content -->
		</div> <!-- .widget -->	
	</div> <!-- .grid -->			
</div>




 
<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		
		$('#myTab a').click(function (e) {
		  e.preventDefault();
		  $(this).tab('show');
		})
			
	})

	$( "#start_date" ).datepicker({
							numberOfMonths: 1,
							showButtonPanel: true,
							changeMonth: true,
							changeYear: true
				});
	$( "#end_date" ).datepicker({
						numberOfMonths: 1,
						showButtonPanel: true,
						changeMonth: true,
						changeYear: true
			});
</script>