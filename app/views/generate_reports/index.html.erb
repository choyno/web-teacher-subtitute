										<th>Date</th>
										<th>Class Period</th>
										<th>Total Hours</th> 
								</thead>
						   		 <tbody>
						   		 	<%= render partial: 'substitute_generate_reports', collection: @generate_reports, as: :generate_report %>
						    	</tbody>
						    </table>
						</div>
					</div>

				</div> <!-- .widget-content -->
		</div> <!-- .widget -->	
	</div> <!-- .grid -->			
</div>




 
<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		
		$('#myTab a').click(function (e) {
		  e.preventDefault();
		  $(this).tab('show');
		})
			
	})
</script>