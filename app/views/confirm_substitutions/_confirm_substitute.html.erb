<tr>
	<th><% if confirm_substitute.request_at_from <=  Date.current.yesterday and
			 confirm_substitute.request_at_to <=  Date.current.yesterday %>
			<%= confirm_substitute.request_at_from.strftime('%m-%d-%Y') %>
		<% elsif %>
				<%= confirm_substitute.request_full_date %>
		<% end %></th>
	<th><%= confirm_substitute.teacher.fullname %></th>
	<th><%= confirm_substitute.reason.name %></th>
	<th><% if confirm_substitute.planned == false%>
		Unplan
		<% elsif%>
		plan
		<% end %>
	</th>
	<th>
		<%= link_to 'Show', confirm_substitution_path(confirm_substitute), method: :get , :class => "btn btn-primary btn-blue" %>
	 
	</th>
</tr>	