<div id="content">			
	<div id="contentHeader">
		<h1>Teacher Substitution Records</h1>
	</div> <!-- #contentHeader -->	
	<div class="container">
		<div class="grid-24">
			<div class="widget widget-table">
				<div class="widget-header">
					<% if notice %>
						<div class="alert alert-success">
									<a class="close" href="javascript:;">Ã—</a>
									<%= notice %>
						</div>
					<% end %>	
					<h3 class="icon chart">Substitute Information</h3>		
				</div>
				<div class="widget-content">
					<%= form_for substitution_records_path, method: :get do %>
						<div class="search">
							<div class="field">
								
								<%= select_tag :request_type_by, options_for_select(
																["Unplan","Plan"], params[:request_type_by]) %>
								
								<%= submit_tag "View", :name => nil, :class => "btn btn-primary btn-blue" %>
							</div>
						</div>
					<% end %>
					<table class="table table-bordered table-striped data-table">
						<thead>
							<tr>
								<th>Date Request</th>
								<th>Requested Teacher</th>
								<th>Reason</th>
								<th>Request Type</th>
								<th>Options</th>
							</tr>
						</thead>
				        <tbody>
							<%= render partial: 'substitution_records', collection: @substitution_records,  as: :substitution_record %>
				        </tbody>
			        </table>
			        <%= paginate @substitution_records %>
				</div> <!-- .widget-content -->
			   </div> <!-- .widget -->
			</div> <!-- .widget-content -->
		</div> <!-- .widget -->	
	</div> <!-- .grid -->			
</div>
			
			
<!-- refresh plugin search -->
<script type="text/javascript" src="/assets/jquerysearch.js"></script>


			
