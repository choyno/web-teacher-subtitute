<tr>
	<th>
		<% if substitution_record.request_at_from <=  Date.current.yesterday and
			substitution_record.request_at_to <=  Date.current.yesterday %>
			<%= substitution_record.request_at_from.strftime('%m-%d-%Y') %>
		<% elsif %>
				<%= substitution_record.request_full_date %>
		<% end %>
	</th>
	<th><%= substitution_record.teacher.fullname %></th>
	<th><%= substitution_record.reason.name %></th>
	<th>
		<% if  substitution_record.planned == false %>
			Unplan
		<% elsif %>
			Plan

		<% end %>
	</th>
	<th>
		<%= link_to 'Show', substitution_record_path(substitution_record), method: :get , 
												:class => "btn btn-primary btn-blue" %>
	 
	</th>
</tr>	