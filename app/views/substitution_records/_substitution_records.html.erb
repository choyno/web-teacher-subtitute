<tr>
	<th><%= substitution_record.created_at.strftime('%D') %></th>
	<th><%= substitution_record.teacher.fullname %></th>
	<th><%= substitution_record.reason.name %></th>
	<th>
		<% if  substitution_record.planned == false %>
			Unplan
		<% elsif %>
			Plan
		<% end %>
	</th>
	<th>
		<%= link_to 'Show', substitution_record_path(substitution_record), method: :get , 
												:class => "btn btn-primary btn-blue" %>
	 
	</th>
</tr>	