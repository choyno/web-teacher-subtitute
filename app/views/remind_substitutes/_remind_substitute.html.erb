<tr>
	<th>
		<% if remind_substitute.request_at_from <=  Date.current.yesterday and
			remind_substitute.request_at_to <=  Date.current.yesterday %>
			<%= remind_substitute.request_at_from.strftime('%m-%d-%Y') %>
		<% elsif %>
				<%= remind_substitute.request_full_date %>
		<% end %>
	</th>
	<th><%= remind_substitute.teacher.fullname %></th>
	<th><%= remind_substitute.reason.name %></th>
	<th><% if remind_substitute.planned == false%>
		Unplan
		<% elsif%>
		Plan
		<% end %>
	</th>
	<th>
		<% if remind_substitute.request_at_to <= Date.current %>
			Ready to Confirm
		<% end %>
		<%= link_to 'Show', remind_substitute_path(remind_substitute), method: :get , :class => "btn btn-primary btn-blue" %>
	 
	</th>
</tr>	