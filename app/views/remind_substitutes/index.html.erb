<div id="content">			
	<div id="contentHeader">
		<h1>Remind Substitutes</h1>
	</div> <!-- #contentHeader -->	
	<div class="container">
		<div class="grid-24">
				
			<div class="widget widget-table">
				<% if notice %>
				<div class="alert alert-success">
							<a class="close" href="javascript:;">Ã—</a>
							<%= notice %>
				</div>
				<% end %>
				<div class="widget-header">
					<h3 class="icon chart">Substitute Information</h3>		
				</div>
				<div class="widget-content">
					<%= form_for remind_substitutes_path, method: :get do %>
						<div class="search">
							<div class="field">
								<%= select_tag :search_by, options_for_select(
																["Requested Teacher", "Request Type"], params[:search_by]) %>
								<%= text_field_tag :search, params[:search], size: 24, :Placeholder => "Search" %>
								<%= submit_tag "Search", :name => nil, :class => "btn btn-primary btn-blue" %>
							</div>
						</div>
					<% end %>
				
					<table class="table table-bordered table-striped data-table">
						<thead>
							<tr>
								<th>Date Request</th>
								<th>Requested Teacher</th>
								<th>Reason</th>
								<th>Request Type</th>
								<th>Options</th>
							</tr>
						</thead>
				        <tbody>
							<%= render partial: 'remind_substitute', collection: @remind_substitutes,  as: :remind_substitute %>
				        </tbody>
			        </table>
			        <%= paginate @remind_substitutes %>
				</div> <!-- .widget-content -->
			   </div> <!-- .widget -->
			</div> <!-- .widget-content -->
		</div> <!-- .widget -->	
	</div> <!-- .grid -->			
</div>
			
			
<!-- refresh plugin search -->
<script type="text/javascript" src="/assets/jquerysearch.js"></script>


			
