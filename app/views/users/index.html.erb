<div id="content">			
	<div id="contentHeader">
		<h1>All User Accounts</h1>
	</div> <!-- #contentHeader -->	
	<div class="container">
		<div class="grid-24">
			<% if notice %>
				<div class="notify notify-error">
					<a class="close" href="javascript:;">Ã—</a>
					<%= notice %>
				</div>
			<% end %>

			<div class="adduser">
				<%= link_to new_user_path do %>
					<button class="btn btn-primary btn-blue">Add New User
					</button>
				<% end %>
				
			</div>

			<div class="widget widget-table">
				<div class="widget-header">
					<h3 class="icon chart">Users Information</h3>		
				</div>
				
				<div class="widget-content">
					<%= form_for users_path, method: :get do %>
						<div class="search">
							<div class="field">
								<%= text_field_tag :search, params[:search], size: 24, :Placeholder => "Search" %>
								<%= submit_tag "Search", :name => nil %>
							</div>
						</div>
					<% end %>
					<table  id="my-table" class="table table-bordered table-striped data-table">
						<thead>
							<tr>
								<th>Full Name</th>
								<th>Username</th>
								<th>Department</th>
								<th>User Type</th>
								<th>Status</th>
								<th>Action</th> 
							</tr>
						</thead>
				   		 <tbody>
							<%= render partial: 'user', collection: @users, as: :user %>
				    	</tbody>
         			</table>
         			<%= paginate @users %>
				</div> <!-- .widget-content -->
			   </div> <!-- .widget -->
			</div> <!-- .widget-content -->
		</div> <!-- .widget -->	
	</div> <!-- .grid -->			
</div>
			
			
