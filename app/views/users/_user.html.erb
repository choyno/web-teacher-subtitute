<tr>
	<td><%= user.full_name %></td>
	<td><%= user.username %></td>
	<td><%= user.department.name if user.department %></td>
	<td><%= user.user_type %></td>
	<td><%= user.status %></td>
	<td>
		<%= link_to edit_user_path(user) do %>
			<button class="btn btn-small btn-quaternary">
				<span class="icon-pen"></span>
				Edit
			</button>
		<% end %>
	</td>	
</tr>