<tr>
	<td><%= user.full_name %></td>
	<td><%= user.username %></td>
	<td><%= user.department.name if user.department %></td>
	<td><%= user.user_type %></td>
	<td>
		<% if  user.status == true %>
			Active
		<% else %>
			Inactive
		<% end %>
	</td>
	<td>
		<%= link_to edit_user_path(user) do %>
			<button class="btn btn-primary btn-blue">
				Edit
			</button>
		<% end %>


		<div class="delete">
		<%= button_to "delete", user_path(user), :method=>:delete, :class=>"btn btn-primary btn-blue" %>
		</div>
	</td>	
</tr>