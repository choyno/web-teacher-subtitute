<tr>
	<th><% if vouch_request.request_at_from <=  Date.current.yesterday and
					vouch_request.request_at_to <=  Date.current.yesterday %>
					<%= vouch_request.request_at_from.strftime('%m-%d-%Y') %>
				<% elsif %>
						<%= vouch_request.request_full_date %>
				<% end %></th>
	<th><%= vouch_request.teacher.fullname %></th>
	<th><%= vouch_request.reason.name %></th>
	<th><% if vouch_request.planned == false%>
		Unplan
		<% elsif%>
		Plan
		<% end %>
	</th>
	<th>
		<%= link_to 'Show', vouch_request_path(vouch_request), method: :get , 
												:class => "btn btn-primary btn-blue" %>
	 
	</th>
</tr>	