<div id="content">			
	<div id="contentHeader">
		<h1>Teachers Schedule</h1>
	</div> <!-- #contentHeader -->	
	<div class="container">
		<div class="grid-24">
			<% if notice %>
				<div class="notify notify-error">
							<a class="close" href="javascript:;">Ã—</a>
							<%= notice %>
				</div>
			<% end %>

			<div class="adduser">
				<%= link_to new_teacher_schedule_path do %>
					<button class="btn btn-primary btn-blue">Add Teachers Schedule
					</button>
				<% end %>
				
			</div>

			<div class="widget widget-table">
				<div class="widget-header">
					<h3 class="icon chart">Class Schedules List</h3>		
				</div>
				
				<div class="widget-content">
					<%= form_for teacher_schedules_path, method: :get do %>
							<div class="search">
								<div class="field">
									<%= text_field_tag :search, params[:search] , size: 24, :Placeholder => "Search" %>
									<%= submit_tag "Search", :name => nil %>
								</div> 
							</div>
						<% end %>
					
					<table  id="my-table" class="table table-bordered table-striped data-table">
						<thead>
							<tr>
								<th>Teacher</th> 
								<th>Subject Code</th> 
								<th>Subject Name</th> 
								<th>Room #</th> 
								<th>Section </th> 
								<th>Type</th> 
								<th>Start time</th> 
								<th>End time </th>
								<th>Schedule</th> 
								<th>Action</th> 
							</tr>
						</thead>
				   		 <tbody>
							<%= render partial: 'teacherschedule', collection: @teacher_subjects, as: :teacherschedule %>
				    	</tbody>
         			</table>
         			<%= paginate @teacher_subjects %>
				</div> <!-- .widget-content -->
			   </div> <!-- .widget -->
			</div> <!-- .widget-content -->
		</div> <!-- .widget -->	
	</div> <!-- .grid -->			
</div>
			
			
			
<!-- refresh plugin search -->
<script type="text/javascript" src="/assets/jquerysearch.js"></script>

